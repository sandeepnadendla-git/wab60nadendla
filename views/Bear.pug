extends layout

block content
    h1= title
    p Welcome to #{title}
    div(class="container-fluid")
        div(class="row")
            -
                let Bear = [
                    {
                        "Color": "White",
                        "Bread": "Polar Bear",
                        "Age": 8
                    },
                    {
                        "Color": "Brown",
                        "Bread": "Brown Bear",
                        "Age": 11
                    },
                    {
                        "Color": "Black",
                        "Bread": "American Black Bear",
                        "Age": 10
                    },
                    {
                        "Color": "Black",
                        "Bread": "Sloth bear",
                        "Age": 17
                    },
                ]
            each item in Bear
                div(class="col-sm-2") #{item.Color}
                div(class="col-sm-2") #{item.Bread}
                div(class="col-sm-2") #{item.Age}